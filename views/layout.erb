<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= @title || "TreeStats" %></title>
    <meta content='width=device-width, initial-scale=1' name='viewport'>
    <meta name="Description" content="Character tracking for Turbine's Asheron's Call">
    <link href="/favicon.ico" rel="shortcut icon" />
    <link rel="stylesheet" href="<%= stylesheet_path("application") %>" />
    <% if @og %><meta property="og:title" content="<%= @og[:title] %>" />
    <meta property="og:description" content="<%= @og[:description] %>" />
    <meta property="og:url" content="<%= @og[:url] %>" /><% end %>
  </head>
  <body>
    <nav>
      <h1><a href="/">TS</a></h1>
      <ul>
        <li><a href="/servers">Servers</a></li>
        <li><a href="/characters">Characters</a></li>
        <li><a href="/allegiances">Allegiances</a></li>
        <li><a href="/rankings">Rankings</a></li>
        <li><a href="/titles">Titles</a></li>
        <li><a href="/populations">Populations</a></li>
        <li><a href="/api">API</a></li>
        <li><a href="/download">Download</a></li>
      </ul>
    </nav>
    <main>
      <form id="search" action="/search">
        <input type="text" aria-label="Search" id="query" name="query" placeholder="Search" />
      </form>

      <%= yield %>
    </main>
  </body>
</html>
