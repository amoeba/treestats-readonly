<h2>Search</h2>

<div>
  Query is: '<%= @query %>'
</div>

<%= erb :_page_controls %>

<div>
  <% if @characters.empty? %>
    <div class="listing">No characters to show.</div>
  <% else %>
    <ul class="listing">
      <% @characters.each do |character| %>
        <li><a href="/<%= character[:server] %>/<%= character[:name] %>"><%= character[:server] %>/<%= character[:name] %></a></li>
      <% end%>
    </ul>
  <% end %>
</div>

<%= erb :_page_controls %>
